{% extends 'base.html.twig' %}

{% block title %}Encounter index{% endblock %}

{% block body %}
    <h1>Encounter index</h1>
    <h2>nombre: {{ encounters|length }}</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Scores</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for encounter in encounters %}
            <tr>
                <td>
                    {% for encounterPlayer in encounter.EncounterPlayers %}
                        {{ encounterPlayer.player.firstname }} {{ encounterPlayer.player.lastname }} - {{ encounterPlayer.isTeam1 }}<br />
                    {% else %}
                        pas de scores
                    {% endfor %}
                </td>
                <td>
                    {% for score in encounter.scores %}
                        {{ score.scoreTeam1 }} - {{ score.scoreTeam2 }}<br />
                    {% else %}
                        pas de scores
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('app_encounter_show', {'id': encounter.id}) }}">show</a>
                    <a href="{{ path('app_encounter_edit', {'id': encounter.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_encounter_new') }}">Create new</a>
{% endblock %}
