{% extends 'base.html.twig' %}

{% block title %}Liste des tournois{% endblock %}

{% block body %}
    <h1>Liste des tournois</h1>
    
    {% include 'tournament/_form.html.twig' with {'button_label': 'Créer', 'form': form_tournament} only %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tournament in tournaments %}
            <tr>
                <td>{{ tournament.id }}</td>
                <td>{{ tournament.name }}</td>
                <td>
                    <a href="{{ path('app_tournament_show', {'id': tournament.id}) }}">Accéder</a>
                    <a href="{{ path('app_tournament_delete', {'id': tournament.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas de tournois trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
